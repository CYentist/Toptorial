<!DOCTYPE html>
<html>
  <head>
    <title>Toptorial Admin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row">
    <div class="container-fluid">
      <%= render "common/navbar" %>
      <%= render "common/flashes" %>

      <div class="row">
        <div class="col-md-2">
          <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
            <li class="active"><%= link_to("全部教程", admin_tutorials_path ) %> </li>
            <li><%= link_to("待审核教程", admin_tutorials_path(:order => "unchecked")) %> </li>
            <li><%= link_to("已上架教程", admin_tutorials_path(:order => "checked")) %> </li>
          </ul>
        </div>
        <div class="col-md-10">
          <%= yield %>
        </div>
      </div>
    </div>
  <%= render "common/footer" %>
  </body>
</html>
