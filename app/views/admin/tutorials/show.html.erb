<div class="container-fluid">
	<div class="row">
		<div class="col-md-12 col-lg-10">

			<%= render "tutorials/image_and_description" %>

			<div class="line">

			</div>
			<div class="TutorialShow">
				<p><%= markdown(@tutorial.content) %></p>
			</div>
			<div class="comments">
			</div>


			<% if @tutorial.checked %>
				<%= link_to("重新审核", recheck_admin_tutorial_path(@tutorial), :method => :post, :class => "btn btn-danger") %>
			<% else %>
				<%= link_to("通过审核", check_admin_tutorial_path(@tutorial), :method => :post, :class => "btn btn-success") %>
			<% end %>
    </div>
  </div>
</div>
