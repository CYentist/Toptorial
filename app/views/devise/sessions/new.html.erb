


<div id="container"><div id="output"></div></div>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default" style="margin-top:50px">
        <div class="panel-body">

        <h2>登录</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, :label =>"登录邮箱", required: false, autofocus: true %>
          <%= f.input :password, :label =>"登录密码", required: false %>
          <%= f.input :remember_me, :label =>"记住账号", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, " 登录 ", :class=>"btn-success"%>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
