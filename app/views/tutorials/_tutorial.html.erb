<div class="col-md-4 col-sm-6 col-lg-4">
  <div class="thumbnail tutorialcard paper">
    <div class="thumbnailimg">
      <a href="<%= tutorial_path(tutorial) %>">
        <% if tutorial.image.present? %>
          <img src="<%= tutorial.image.medium.url%>" >
        <% else %>
         <img src="http://placehold.it/500x300&text=Toptorial" >
        <% end %>
    </div>
    <div class="caption">
      <div class="tutorial_title">
        <h3><%= link_to(tutorial.title, tutorial_path(tutorial)) %></h3>
      </div>
      <div class="TutorialDescription">
        <p><%= tutorial.description %></p>
      </div>
      <span class="creator">
        <img src= "<%= render_user_avatar_thumb(tutorial.user, 30) %>">
        <%= link_to(tutorial.user.display_name, user_path(tutorial.user), style:" margin-left:5px;")  %>
      </span>
      <div class="vote">
        <p><a href="<%= tutorial_path(tutorial) %>" class="btn btn-danger" role="button"><i class="fa fa-thumbs-o-up fa-rotate-270" aria-hidden="true"></i> 顶 <%= tutorial.get_upvotes.size %></a>
          <a href="<%= tutorial_path(tutorial) %>" class="btn btn-default" role="button"><i class="fa fa-thumbs-o-down" aria-hidden="true"></i> 踩 <%= tutorial.get_downvotes.size %></a>
        </p>
      </div>

    </div>
  </div>
</div>
