<div class="paper PreviewDetailShow">

  <div>
    <div class="avatar">
      <a href="<%= user_path(@tutorial.user)%>"><img src= "<%= render_user_avatar_thumb(@tutorial.user, 200) %>"></a>
      <a href="<%= user_path(@tutorial.user)%>">
      <h1><%= @tutorial.user.display_name %></h1></a>
      <p class="user_description"><%= @tutorial.user.description %></p>
      <button class="btn btn-success" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        找我答疑
      </button>
      <div class="user_total_votes">
        共收到<%= @tutorial.user.total_votes %>个顶
      </div>
    </div>

    <div class="container">
      <div class="collapse" id="collapseExample">
        <div class="col-md-10 col-sm-6 col-xs-12" style="padding:5px">
          <div class="row">
            <% if @tutorial.user.answers.present? %>
              <%= render partial: 'answers/answer', collection: @tutorial.user.answers, as: :answer %>
            <% else %>
              他/她还没开通答疑服务
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="voteShow">
  <%= link_to like_tutorial_path(@tutorial), class:"btn btn-danger", role:"button", method: :put do %>
   <i class="fa fa-thumbs-o-up fa-rotate-270" aria-hidden="true"></i> 顶
      <%= @tutorial.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_tutorial_path(@tutorial), class:"btn btn-default", role:"button", method: :put do %>
      <i class="fa fa-thumbs-o-down" aria-hidden="true"></i> 踩
      <%= @tutorial.get_downvotes.size %>
  <% end %>
</div>
<!-- 投票 -->
<div class="searchShow" role="search">
  <%= render :partial => "tutorials/search_bar" %>
</div>
