<div class="container-fluid">
  <div class="row">
    <div class="index-part-1">
      <div class="lp-block-1">
          <h1>让知识有价值</h1>
        <h2>与更多的人分享你的知识和技能</h2>
        <div>
          <%= link_to("开始写教程", new_tutorial_path, class:"lp-block-1-button") %>
        </div>
      </div>
    </div>

    <nav class="subnavbar navbar navbar-default">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active">
              <a href="#">最新 </a></li>
            <li><a href="#">最热</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">其他</a></li>
          </ul>
        </div>
      </div>
    </nav>

<div class="index-part-3">
  <div class="container">

      <div class="pull-right" style="padding-bottom: 20px;">
        <%= link_to("发布教程", new_tutorial_path, class: "btn btn-primary") %>
      </div>

      <% @tutorials.each do |tutorial| %>
      <div class="row">
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <img src= "" alt="nopic">
            <div class="caption">
              <h3>Thumbnail label</h3>
              <p><%= tutorial.description %></p>
              <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
            </div>
          </div>
        </div>
      </div>
          <tr>
              <td>
                <%= tutorial.get_upvotes.size %>
              </td>
              <td>
                <%= tutorial.get_downvotes.size %>
              </td>
              <td>
                <%= link_to(tutorial.title, tutorial_path(tutorial)) %>
              </td>
              <td>
                <%= tutorial.description %>
              </td>
              <td><%= link_to(tutorial.user.display_name, user_path(tutorial.user))  %></td>
              <td>
                <% if current_user == tutorial.user %>
                  <%= link_to("查看", tutorial_path(tutorial), class:"btn btn-sm btn-success")%>
                  <%= link_to("编辑", edit_tutorial_path(tutorial), class:"btn btn-sm btn-primary")%>
                <% else %>
                  <%= link_to("查看", tutorial_path(tutorial), class:"btn btn-sm  btn-success")%>
                <% end %>
              </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>


  </div>
  <!-- row -->
</div>
<!-- container -->
