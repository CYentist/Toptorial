<%= simple_form_for @tutorial do |f| %>

<%= f.input :title %>
<%= f.input :content %>
<% if @tutorial.image.present? %>
   <%= image_tag(@tutorial.image.thumb.url) %>
<% else %>
   <%= f.input :image, as: :file %>
<% end %>
<%= f.input :description %>
<%= f.submit "Submit" %>
<% end %>

<%= render "simplemde" %>
