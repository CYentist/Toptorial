<%= simple_form_for @tutorial do |f| %>

<%= f.input :title %>
<%= f.input :content %>
<% if @tutorial.image.present? %>
   <%= image_tag(@tutorial.image.thumb.url) %>
<% end %>
<%= f.input :image, as: :file %>
<%= f.input :description %>
<%= f.input :price, input_html: { type: 'number', min: 0 }, as: :radio_buttons, collection: ["免费", "9"] %>
<%= f.submit "Submit" %>
<% end %>

<%= render "simplemde" %>
