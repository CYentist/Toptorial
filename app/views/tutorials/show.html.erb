<div class="container">
	<div class="row-fluid">

    <div class="col-md-12 col-lg-10">

			<%= render "image_and_description" %>

			<div class="line">

			</div>
			<div class="TutorialShow">
				<p><%= markdown(@tutorial.content) %></p>
			</div>

				<!-- 全文 -->
			<div class="comments">


				<div class="newcomment">
					<%= simple_form_for [@tutorial, @comment] do |f| %>
					<fieldset class="form-group">
						<%= f.input :post, :label => "回复", placeholder: "输入内容"%>
					</fieldset>
					<%= f.submit "发送", class: "button btn btn-sm btn-success",  data: { disable_with:"发送中..."} %>
					<% end %>
				<!-- 可以发表评论 -->
				</div>

				<div class="comment">
				 <%= render :partial => "comments/comments", :collection => @comments, :as => :comment %>
				 <!-- 显示评论 -->
				</div>
			</div>
	    </div>
	  </div>
		<!-- row -->
	</div>
	<!-- container -->
