<div class="container">
	<div class="row-fluid">
    <h1> <%= @tutorial.title %> </h1>

    <div class="col-md-10" style="float: center;">

			<%= render "image_and_description" %>
	    <p><%= markdown(@tutorial.content) %></p>
				<!-- 全文 -->

				<div class="newcomment">
					<%= simple_form_for [@tutorial, @comment] do |f| %>
					<fieldset class="form-group">
						<%= f.input :post, :label => "回复", placeholder: "输入内容"%>
					</fieldset>
					<%= f.submit "发送", class: "button btn btn-sm btn-danger",  data: { disable_with:"发送中..."} %>
					<% end %>
				<!-- 可以发表评论 -->
				</div>

				<div class="comment">
				 <%= render :partial => "comments/comments", :collection => @comments, :as => :comment %>
				 <!-- 显示评论 -->
				</div>

	    </div>
	  </div>
		<!-- row -->
	</div>
	<!-- container -->
