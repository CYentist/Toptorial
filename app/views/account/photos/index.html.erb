
<div class="container-fluid">

    <div class="row col-md-12 col-lg-12" style="margin:20px auto">
      <%= form_tag '/photos', method: :post, class: 'dropzone form', id: 'media-dropzone' do %>
        <div class="fallback">
          <%= file_field_tag 'media', multiple: true %>
        </div>

      <% end %>
        <p class="Littlenotice">如果不显示拖拽上传，请刷新页面</p>
    </div>

  <div class="row" style="margin-top: 50px;">
    <div class="col-lg-12 col-md-12">
      <div >
        <h4><b>Media</b></h4><hr>
        <div class="row">
          <div class="col-lg-12">
            <%= form_tag '/delete_media', method: :delete do %>
              <%= submit_tag 'Delete', id: 'delete', class: 'btn btn-danger', disabled: @photos.empty? %>
              <br><br>

                <div id="media-contents" class="col-lg-12 col-md-12">
                  <% if @photos.empty? %>
                    <h5 id="no-media">No Media Found</h5>
                  <% else %>
                    <% @photos.each do |media| %>
                      <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="thumbnail">
                          <%= image_tag media.file_name.url %>
                          <div class="caption">
                            <p>
                              <%= check_box_tag 'photos[]', media.id %>
                            </p>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- container -->
